<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.smacks.any? %>
      <h3>Smacks (<%= @user.smacks.count %>)</h3>
      <ol class="smacks">
        <%= render @smacks %>
      </ol>
      <%= will_paginate @smacks %>
    <% end %>
  </div>
</div>
