<div style="text-align: center">
  <% if @league.current_week == 0 %>
    <% if  @league.user_in_league(current_user) %>
      <% if @league_user.admin? %>
        <p>Need to make changes?
          <%= link_to "Modify it!", modify_path(id: @league.id), class: "btn btn-info" %>
        </p>
        <p>Tired of the league? 
          <%= link_to "Delete it!", @league, class: "btn btn-mini btn-danger", method: :delete, 
            confirm: "Are you sure?" %>
        </p>
      <% else %>
        <%= link_to "Leave this league!", quit_url(id: @league.id), class: "btn btn-large btn-primary", confirm: "Are you sure?" %>
      <% end %>
    <% else %>
      <%= link_to "Join this league!", join_url(id: @league.id), class: "btn btn-large btn-primary" %>
    <% end %>
  <% end %>
</div>
