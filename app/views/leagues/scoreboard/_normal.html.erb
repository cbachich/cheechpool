<h1>Week <%= @week_number %> Scoreboard</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Users</th>
      <% @challenges.each do |challenge| %>
        <% if challenge.name == "Elimination" %>
          <% for i in 1..@players.count %>
            <th><%= i %></th>
          <% end %>
        <% else %>
          <th><%= challenge.name %></th>
        <% end %>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @user_picks_table.each do |row| %>
      <tr>
        <td><%= row[:user] %></td>
        <% row[:contents].each do |content| %>
          <%= render 'leagues/scoreboard/cell_display', content: content %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
