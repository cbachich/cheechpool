<h1>Week <%= @week_number %> Scoreboard</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Users</th>
      <% @challenges.each do |challenge| %>
        <% if challenge.name == "Elimination" %>
          <% for i in 1..@players.count %>
            <th><%= i %></th>
          <% end %>
        <% else %>
          <th><%= challenge.name %></th>
        <% end %>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @user_picks_table.each do |row| %>
      <tr>
        <td><%= row[0] %></td>
        <% for i in 1..(row.count-1) %>
          <td>
            <% if row[i] != "" %>
              <div><%= row[i].name %></div>
            <% end %>
            <div>
              <% if row[i].is_a? Player %>
                <%= image_tag row[i].image_url, size: "40x40", alt: row[i].name, title: row[i].name %>
              <% elsif row[i].is_a? Team %>
                <%= image_tag row[i].image_url, size: "60x60", alt: row[i].name, title: row[i].name %>
              <% end%>
            </div>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
