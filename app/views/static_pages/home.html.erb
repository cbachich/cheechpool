<% if signed_in? %>
  <% if active_league? %>
    <div class="row home">
      <h1><%= active_league.name %></h1>
      <p>
      Welcome back <%= current_user.name %>! Make sure to talk a bunch of smack this season
      by entering whatever is on your mind in the box to the left. Also, make sure to make
      your picks each week, by selecting the <%= link_to "Picksheet", picksheet_url %> link
      up top.
      </p>
      <%= render 'shared/feed_items' %>
    </div>
  <% else %>
    <div class="center hero-unit">
      <h1>Not signed up in any leagues!</h1>
      <h2>Please join a league to start talking smack and making picks.</h2>

      <%= link_to "Click here to join a league now!", leagues_path %>
    </div>
  <% end %>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to CheechPool!</h1>
    
    <h2>
      A pick-em pool website for Reality TV series.
    </h2>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
  </div>

  <%= link_to image_tag("http://www.onlyinatlanticcity.com/wp-content/uploads/2012/04/survivor.jpg", size: "200x10", alt: "Survivor"), 'http://www.cbs.com/survivor' %>
  <%= link_to image_tag("http://news.doddleme.com/wp-content/uploads/2012/09/big-brother-cbs-logo.jpg", size: "200x10", alt: "Big Brother"), 'http://www.cbs.com/big_brother' %>
<% end %>
